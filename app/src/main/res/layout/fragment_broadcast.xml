<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="30dp"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    tools:context=".Fragments.BroadcastFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/localReceiverText"
        android:hint="@string/Local_receiver_hint"
        android:layout_gravity="top|center"
        android:inputType="textAutoComplete"
        />
    <Button
        android:id="@+id/localReceiverButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/broadcast_local_button"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/serviceReceiverButton"
        android:text="register"
